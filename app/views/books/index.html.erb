  <body>

<h1>Books</h1>

<% if flash[:notice] %>
   <p id="notice">
     <%= flash[:notice] %>
   </p>
<% end %>

    <table>
  <thead>
    <tr>
     <th>Title</th>
   <div class="content_title">
  </div>

     <th>Body</th>
    <div class="content_body" >
    </div>

    <th colspan="3"></th>
    </tr>
    </thead>

  <tbody>
    <% @bookers.each do |book| %>
    <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>

   <td><%= link_to 'Show' , book_path(book.id) %></td>
   <td><%= link_to 'Edit' , edit_book_path(book.id) %></td>
   <td><%= link_to 'Destroy',book_path(book.id), method: :delete%></td>


  </tr>
<% end %>

  </tbody>
</table>




<h2>New book</h2>

<% if @book.errors.any? %>
   <%= @book.errors.count %>件のエラーが発生しました
   <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model:@book, url:'/books', local:true do |f| %>

 <div class="field">
 <label for="book_title">Title</label></br>
  <%= f.text_field :title%>
 </div>

 <div class="field">
 <label for="book_body">Body</label></br>
   <%= f.text_area :body %>
 </div>

 <div class="actions">
    <%= f.submit 'Create Book' %>
 </div>
<% end %>

 </body>
